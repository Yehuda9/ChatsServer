@model Rating_page.Models.RatingClass

@{
    ViewData["Title"] = "Delete";
}

<div id="login_bg">
    <div id="login_register_wrapper">
        <div id='login_window'>
            <div id="side_window">
                <h1>Delete Comment</h1>
                <br />
                <div class="links">
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                    <br />
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="right-side" id="rs-form">
                <h4>Are you sure you want to delete this rating?</h4>
                <span>
                    <div class="column">
                        @Html.DisplayNameFor(model => model.Composer)
                    </div>
                    @Html.DisplayFor(model => model.Composer)
                </span>
                <span>
                    <div class="column">
                        @Html.DisplayNameFor(model => model.Title)
                    </div>
                        @Html.DisplayFor(model => model.Title)
                </span>
                 <span>
                    <div class="column">
                        @Html.DisplayNameFor(model => model.Description)
                    </div>
                        @Html.DisplayFor(model => model.Description)
                </span>
                 <span>
                    <div class="column">
                        @Html.DisplayNameFor(model => model.Rating)
                    </div>
                        @Html.DisplayFor(model => model.Rating)
                </span>
                 <span>
                    <div class="column">
                        @Html.DisplayNameFor(model => model.DateTime)
                    </div>
                    @Html.DisplayFor(model => model.DateTime)
                </span>

                <form asp-action="DeleteRating">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

